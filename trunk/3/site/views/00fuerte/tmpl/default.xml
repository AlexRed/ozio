			<field type="list" name="transition" label="COM_OZIOGALLERY3_TRANSITION_LBL" description="COM_OZIOGALLERY3_TRANSITION_DSC" default="fade">
				<option value="none">COM_OZIOGALLERY3_TRANSITION_NONE</option>
