<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="Imagerotator Skin">
		<message>
			<![CDATA[Ozio Imagerotator Skin tip]]>
		</message>
	</layout>
	<state>
		<name>Ozio Imagerotator Skin</name>
		<description>Ozio Imagerotator Skin desc</description>
	<params addpath="/components/com_oziogallery2/elements">
		<param name="" type="scriptloader" default="" label="" description="" />
		<param name="Reset XML" type="oziotext3" default="" label="" description="Reset XML Desc" />		
			<param name="introtext" type="textarea" default="" label="Intro" rows="5" cols="30" description="Intro desc"/>
			<param name="showintrotext" type="radio" default="0" label="Mostra intro" description="Mostra intro desc">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="xmlnamesuff" type="text" default="" label="Suffisso nome XML" size="30" description="Suffisso nome XML desc" />			
			<param name="@spacer" type="spacer" default="&lt;div style=&quot;font-weight:normal;font-size:12px;color:#fff;padding:4px;margin:0;background:#666;&quot;&gt;Metodo&lt;/div&gt;" label="" description="" />
		<param name="flickr" type="radio" default="0" label="Flickr" description="Flickr desc" >
          <option value="0">No</option>
          <option value="1">Yes</option>
        </param>			
		<param name="user_id" type="text" default="" label="Id Utente flickr" size="20" description="Id Utente flickr desc" />
		<param name="xml_moder" type="list" default="2" label="Metodo XML" description="Metodo XML desc imagerotator" >
          <option value="0">XML automatico</option>
          <option value="1">XML manuale</option>
        </param>			
		<param name="folder" type="text" default="images/oziogallery2" label="Percorso Cartella" size="40" description="PERCORSO CARTELLA DESC"/>		
		<param name="@spacer" type="spacer" default="&lt;div style=&quot;font-weight:normal;font-size:12px;color:#fff;padding:4px;margin:0;background:#666;&quot;&gt;XML Settings (reset XML to apply)&lt;/div&gt;" label="" description="" />	
		<param name="ordinamento" type="list" default="3" label="Ordine immagini" description="Ordine immagini desc" >
          <option value="0">Per Nome ordine alfabetico</option>
          <option value="1">Per Nome ordine alfabetico inverso</option>		  
          <option value="2">Per Data - Prima i recenti</option>
          <option value="3">Per Data - Prima i meno recenti</option>	
          <option value="4">Casuale</option>		  
        </param>
			<param name="@spacer" type="spacer" default="&lt;div style=&quot;font-weight:normal;font-size:12px;color:#fff;padding:4px;margin:0;background:#666;&quot;&gt;Imagerotator Settings&lt;/div&gt;" label="" description="" />			
		<param name="width" type="text" default="640" label="Larghezza" size="4" description="Larghezza Desc" />
		<param name="height" type="text" default="480" label="Altezza" size="4" description="Altezza Desc" />
		<param name="screencolor" type="colorpicker" class="color {hash:true,required:false}" default="#000000" size="10" label="BACKGROUND GRADIENT EDGE" description="BACKGROUND GRADIENT EDGE DESC" />		
		<param name="table" type="list" default="2" label="Allineamento tabella" description="Allineamento tabella desc" >
          <option value="0">Sinistra</option>
          <option value="1">Destra</option>
          <option value="2">center</option>
        </param>		
		<param name="rotatoralign" type="list" default="2" label="Allineamento contenuto" description="Allineamento contenuto desc" >
          <option value="0">Sinistra</option>
          <option value="1">Destra</option>
          <option value="2">inherit</option>
        </param>
		<param name="trans" type="list" default="0" label="Transizione" description="Transizione desc" >
          <option value="0">Random</option>
          <option value="1">Fade</option>
          <option value="2">Blocks</option>
          <option value="3">Circles</option>
          <option value="4">Bubbles</option>
          <option value="5">Lines</option>	
          <option value="6">Small Fade</option>	
          <option value="7">BG Fade</option>	
          <option value="8">Flash</option>	
          <option value="9">Fluids</option>			  
        </param>			
		<param name="rotatetime" type="text" default="5" label="ROTATE TIME" description="ROTATE TIME DESC" />
		<param name="shownavigation" type="radio" default="1" label="NAVIGATION" description="NAVIGATION desc" >
          <option value="0">No</option>
          <option value="1">Yes</option>
        </param>
		<param name="movimento" type="radio" default="0" label="MOTION" description="MOTION DESC" >
          <option value="0">No</option>
          <option value="1">Yes</option>
        </param>
		<param name="overstretch" type="radio" default="0" label="Overstretch" description="Overstretch desc" >
          <option value="0">No</option>
          <option value="1">Yes</option>
        </param>
		<param name="shuffle" type="radio" default="0" label="Shuffle" description="Shuffle desc" >
          <option value="0">No</option>
          <option value="1">Yes</option>
        </param>			
		<param name="audio" type="radio" default="0" label="Audio" description="Audio desc" >
          <option value="0">No</option>
          <option value="1">Yes</option>
        </param>
		<param name="audiopath" type="text" default="" label="AUDIO PATH" size="40" description="AUDIO PATH DESC"/>				
		<param name="volume" type="text" default="80" label="Volume" size="4" description="Volume desc" />	
		<param name="logo" type="radio" default="0" label="Logo" description="Logo desc" >
          <option value="0">No</option>
          <option value="1">Yes</option>
        </param>		
		<param name="logopath" type="text" default="" label="Logo Path" size="40" description="Logo Path desc"/>
			<param name="@spacer" type="spacer" default="&lt;div style=&quot;font-weight:normal;font-size:12px;color:#fff;padding:4px;margin:0;background:#666;&quot;&gt;Debug Settings&lt;/div&gt;" label="" description="" />			
		<param name="modifiche" type="radio" default="0" label="Data e Ora modifiche" description="DATA E ORA MODIFICHE DESC" >
          <option value="0">No</option>
          <option value="1">Yes</option>
        </param>
		<param name="debug" type="radio" default="0" label="Debug" description="Debug info" >
          <option value="0">No</option>
          <option value="1">Yes</option>
        </param>		
		</params>
	</state>
</metadata>