<name>Ozio Gallery 2</name>
<creationDate>08/07/2009</creationDate>
<author>Alexred</author>
<copyright>(C) 2008</copyright>
<authorEmail>info@joomla.it</authorEmail>
<authorUrl>http://www.joomla.it</authorUrl>
<version>2.0</version>
<license>GNU/GPL - http://www.gnu.org/copyleft/gpl.html</license>
<description>Ozio Gallery for Joomla! 1.5</description>
<installfile>install.oziogallery2.php</installfile>
<uninstallfile>uninstall.oziogallery2.php</uninstallfile>
<files folder="site">
	<filename>index.html</filename>
	<filename>oziogallery2.php</filename>
	<filename>controller.php</filename>
	<folder>assets</folder>
	<folder>elements</folder>
	<folder>imagin</folder>
	<folder>skin</folder>
	<folder>views</folder>	
</files>
<administration>
	<menu img="components/com_oziogallery2/images/oziogallery2.png">Ozio Gallery 2</menu>
	<menu link="option=com_oziogallery2">Ozio Gallery 2</menu>
	<files folder="admin">
		<filename>index.html</filename>
		<filename>admin.oziogallery2.html.php</filename>
		<filename>admin.oziogallery2.php</filename>
		<folder>css</folder>
		<folder>images</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.com_oziogallery2.ini</language>
		<language tag="it-IT">language/it-IT/it-IT.com_oziogallery2.ini</language>
	</languages>
	<media folder="admin" destination="com_oziogallery2/images">
		<filename>images/oziogallery2.png</filename>
	</media>
</administration>
</install>




